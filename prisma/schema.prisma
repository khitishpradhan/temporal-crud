// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Your models go below
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  picture   String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}